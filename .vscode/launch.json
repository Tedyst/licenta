    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                "serve",
                "-d"
            ],
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Analyze this Git repo",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                "extract",
                "git",
                "."
            ],
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Test",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": ".",
            "args": [
                "tasks",
                "updatenvd",
                "postgres",
                "-d",
                // "ubuntu",
                // "--local"
            ],
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}