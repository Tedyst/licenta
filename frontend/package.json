{
	"name": "frontend",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "npm run generate && vite build && npm run postbuild",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"postbuild": "npx svelte-sitemap --domain https://licenta.tedyst.ro",
		"generate": "npx openapi-typescript ../api/v1/spec.yaml -o ./src/lib/api/v1.d.ts"
	},
	"devDependencies": {
		"@accuser/svelte-plausible-analytics": "^1.0.0",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.5.0",
		"@types/html-minifier": "^4.0.2",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"daisyui": "^4.6.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"html-minifier": "^4.0.0",
		"openapi-typescript": "^6.7.3",
		"postcss": "^8.4.31",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"svelte-sitemap": "^2.6.0",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.5.2",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/roboto": "^5.0.8",
		"material-icons": "^1.13.9",
		"material-symbols": "^0.10.4",
		"openapi-fetch": "^0.8.2",
		"svelte-local-storage-store": "^0.5.0",
		"ts-md5": "^1.3.1"
	}
}
